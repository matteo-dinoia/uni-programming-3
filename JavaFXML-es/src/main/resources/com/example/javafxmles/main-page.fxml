<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="vBox" spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxmles.ExcerciseController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="questionText" alignment="CENTER" VBox.vgrow="ALWAYS">
        <font> <Font size="20.0" /></font>
    </Label>

    <HBox spacing="5" VBox.vgrow="ALWAYS">
        <Label text="Inserisci risultato:" HBox.hgrow="ALWAYS" />
        <TextField fx:id="answerText" HBox.hgrow="ALWAYS" />
    </HBox>

    <Label fx:id="resultText" alignment="CENTER" VBox.vgrow="ALWAYS" />

    <HBox alignment="CENTER" spacing="5" VBox.vgrow="ALWAYS">
        <Button onAction="#onNextBtnClick" text="Altro Esercizio" />
        <Button mnemonicParsing="false" onAction="#onConfermaBtnClick" text="Conferma" />
    </HBox>
</VBox>
